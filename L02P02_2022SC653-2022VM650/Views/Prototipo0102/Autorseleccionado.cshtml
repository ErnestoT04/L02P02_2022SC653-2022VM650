@model L02P02_2022SC653_2022VM650.Models.AutorConLibrosViewModel
@{
    ViewData["Title"] = $"Libros de {Model.Autor.Autor}";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="container">
        <ul class="progressbar">
            <li>Autores</li>
            <li class="active">Libros</li>
            <li>Comentarios Existentes</li>
            <li>Nuevo Comentario</li>
        </ul>

        <div class="text-msg">
            @Html.Raw($"<h2>Libros del autor: {Model.Autor.Autor}</h2>")
        </div>

        <div class="author-grid">
            @foreach (var libro in Model.Libros)
            {
                <div class="author-card">
                    <div class="author-info">
                        @Html.DisplayFor(m => libro.Nombre, new { htmlAttributes = new { @class = "author-name" } })
                        <p>@libro.Descripcion</p>
                    </div>
                    <div class="author-actions">
                        @Html.ActionLink("Seleccionar", "Index", "Prototipo0304", new { libroId = libro.Id }, new { @class = "btn-select" })
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
