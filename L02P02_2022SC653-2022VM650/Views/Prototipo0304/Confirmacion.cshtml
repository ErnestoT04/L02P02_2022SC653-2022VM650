@model L02P02_2022SC653_2022VM650.Models.ComentariosLibro

@{
    ViewData["Title"] = "Confirmación del Comentario";
}

<link rel="stylesheet" href="~/css/style.css" />

<div class="container mt-4">
    <ul class="progressbar">
        <li>Autores</li>
        <li>Libros</li>
        <li>Comentarios</li>
        <li class="active">Confirmación</li>
    </ul>



    <div class="row mt-4">
        
        <div class="col-md-6">
            <h4 class="text-primary">Información del Comentario</h4>
            <div class="card p-3 bg-light">
                <p><strong>Libro:</strong> @Model.IdLibroNavigation?.Nombre</p>
                <p><strong>Usuario:</strong> @Model.Usuario</p>
                <p><strong>Fecha:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Comentario:</strong></p>
                <div class="border rounded p-2 bg-white">
                    @Model.Comentarios
                </div>
            </div>
        </div>

       
        <div class="col-md-6">
            <h4 class="text-primary">Confirmación Visual</h4>
            <div class="alert alert-success text-center">
                Comentario Adicionado con éxito!
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" asp-route-libroId="@Model.IdLibro" class="btn btn-primary">Volver a Comentarios</a>
    </div>
</div>
