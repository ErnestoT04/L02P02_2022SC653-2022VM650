@model List<L02P02_2022SC653_2022VM650.Models.ComentariosLibro>
@{
    ViewData["Title"] = "Comentarios";
    int libroId = (int)ViewBag.LibroId;
    string autor = ViewBag.AutorNombre ?? "Nombre del Autor Seleccionado";
    string libro = ViewBag.LibroNombre ?? "Nombre del Libro Seleccionado";
}

<div class="container mt-4">
    <!-- Barra de progreso (mantenida como está) -->
    <ul class="progressbar">
        <li>Autores</li>
        <li>Libros</li>
        <li class="active">Comentarios</li>
        <li>Confirmación</li>
    </ul>

    <h2 class="mt-4 mb-3">Comentarios por Libros</h2>
    <p class="mb-4">Seleccione el autor → Seleccione el Libro → Se muestran los comentarios existentes → Adicione un nuevo comentario</p>

    <!-- Info del autor/libro -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-light p-3">
                <strong>Autor:</strong> @autor
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-light p-3">
                <strong>Libro:</strong> @libro
            </div>
        </div>
    </div>

    <!-- Contenido en dos columnas -->
    <div class="row">
        <!-- Comentarios existentes -->
        <div class="col-md-6">
            <h3 class="text-primary mb-3">Comentarios Existentes</h3>

            @if (Model.Any())
            {
                foreach (var c in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="card-text"><small class="text-muted">@c.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</small></p>
                            <p class="card-text">@c.Comentarios</p>
                            <p class="card-text"><small class="text-muted font-italic">@c.Usuario</small></p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    Aún no hay comentarios para este libro.
                </div>
            }
        </div>

        <!-- Formulario de nuevo comentario -->
        <div class="col-md-6">
            <h3 class="text-primary mb-3">Agregar un Comentario</h3>

            <form asp-action="Guardar" method="post">
                <input type="hidden" name="IdLibro" value="@libroId" />

                <div class="form-group">
                    <label for="Comentarios"><strong>Comentario</strong></label>
                    <textarea name="Comentarios" class="form-control" rows="4" required></textarea>
                </div>

                <button type="submit" class="btn btn-success">
                    Guardar Comentario
                </button>
            </form>
        </div>
    </div>
</div>