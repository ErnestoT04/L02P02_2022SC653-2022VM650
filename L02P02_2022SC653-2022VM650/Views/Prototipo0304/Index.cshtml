@model List<L02P02_2022SC653_2022VM650.Models.ComentariosLibro>
@{
    ViewData["Title"] = "Comentarios";
    int libroId = (int)ViewBag.LibroId;
    string autor = ViewBag.AutorNombre ?? "Nombre del Autor Seleccionado";
    string libro = ViewBag.LibroNombre ?? "Nombre del Libro Seleccionado";
}

<link rel="stylesheet" href="~/css/style.css" />

<div class="container">
    <!-- Barra de progreso -->
    <ul class="progressbar">
        <li>Autores</li>
        <li>Libros</li>
        <li class="active">Comentarios</li>
        <li>Confirmación</li>
    </ul>

    <h2 style="margin-top: 40px;">Comentarios por Libros</h2>
    <p>Seleccione el autor -> Seleccione el Libro -> Se muestran los comentarios existentes -> Adicione un nuevo comentario</p>

    <!-- Info del autor/libro -->
    <div style="display: flex; gap: 20px; margin-top: 25px;">
        <div style="flex: 1; background-color: #f5f5f5; padding: 15px; border-radius: 8px;">
            <strong style="color: #333;">Autor:</strong> @autor
        </div>
        <div style="flex: 1; background-color: #f5f5f5; padding: 15px; border-radius: 8px;">
            <strong style="color: #333;">Libro:</strong> @libro
        </div>
    </div>

    <!-- Contenido en dos columnas -->
    <div style="display: flex; justify-content: space-between; margin-top: 30px;">
        <!-- Comentarios existentes -->
        <div style="width: 48%;">
            <h3 style="color: #7c4dff; margin-bottom: 15px;">Comentarios Existentes</h3>

            @if (Model.Any())
            {
                @foreach (var c in Model)
                {
                    <div style="border: 1px solid #ccc; border-radius: 6px; padding: 12px; margin-bottom: 12px;">
                        <p style="margin-bottom: 5px;"><strong>@c.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</strong></p>
                        <p style="margin-bottom: 5px;">@c.Comentarios</p>
                        <p style="margin: 0; font-style: italic; font-size: 14px;">@c.Usuario</p>
                    </div>
                }
            }
            else
            {
                <p style="color: gray;">Aún no hay comentarios para este libro.</p>
            }
        </div>

        <!-- Formulario de nuevo comentario -->
        <div style="width: 48%;">
            <h3 style="color: #7c4dff; margin-bottom: 15px;">Agregar un Comentario</h3>

            <form asp-action="Guardar" method="post">
                <input type="hidden" name="IdLibro" value="@libroId" />

                <div style="margin-bottom: 15px;">
                    <label for="Comentarios"><strong>Comentario</strong></label>
                    <textarea name="Comentarios" class="form-control" rows="4" required></textarea>
                </div>

              

                <button type="submit" style="background-color: #28a745; color: white; padding: 10px 20px; border: none; border-radius: 5px;">
                    Guardar Comentario
                </button>
            </form>
        </div>
    </div>
</div>
